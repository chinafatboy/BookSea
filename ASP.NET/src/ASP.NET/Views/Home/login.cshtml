@{
    ViewData["Title"] = "登陆";
}
<!doctype html>
    <title>登陆</title>
<div class="container">
    <hr />
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="name" class="col-md-offset-2 col-md-2 control-label">用户名</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="name" placeholder="请输入用户名" width="30px">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-md-offset-2 col-md-2 control-label">密码</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="password" placeholder="请输入密码" width="30px">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> 请记住我
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-6">
                <button type="submit" class="btn btn-default">登录</button>
            </div>
        </div>
    </form>
    </div>
