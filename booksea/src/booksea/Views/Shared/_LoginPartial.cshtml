@using Microsoft.AspNetCore.Identity
@using booksea.Models
@using System.Net
@inject BookSeaContext db


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="/Account/MemberHome">
                    <span lang="zh-cn">会员中心</span>
                </a>
            </li>
            <li>
                <a href="/Cart?retUrl=@WebUtility.UrlEncode(ViewBag.contBuy.ToString())">
                    <span lang="zh-cn">我的购物车</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">您好， @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><span class="glyphicon glyphicon-log-out"></span>&nbsp;注销</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="/Cart?retUrl=@WebUtility.UrlEncode(ViewBag.contBuy.ToString())">
                <span lang="zh-cn">我的购物车</span>
            </a>
       </li>
        <li><a asp-area="" asp-controller="Account" asp-action="Register"><span class="glyphicon glyphicon-user"></span>&nbsp;注册</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"><span class="glyphicon glyphicon-log-in"></span>&nbsp;登录</a></li>
    </ul>
}
